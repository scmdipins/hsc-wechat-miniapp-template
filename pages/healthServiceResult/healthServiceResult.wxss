.title {
  width: 128rpx;
  height: 44rpx;
  margin: 0 6rpx 60rpx 48rpx;
  font-family: PingFangSC;
  font-size: 32rpx;
  font-weight: 600;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #4e4e4e;
}



.result {
  display: flex;
  width: 750rpx;
  height: 80rpx;
}

.reslut-name {
  margin-left: 50rpx;
  font-size: 32rpx;
}

.result-image {
  position: absolute;
  margin-left: 652rpx;
  width: 48rpx;
  height: 48rpx;
}



.radio {
  position: relative;
}

.radio radio {
  margin-left: 50rpx;
  width: 0;
  opacity: 0;
}


.line {
  margin-top: 16rpx;
  width: 688rpx;
  height: 2rpx;
  background-color: #f0f0f0;
}

.wrong-1 {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 50rpx;
  border: solid #f0f0f0;
  border-width: 0 0 2rpx 0;
  margin-left: 48rpx;
}
.wrong-2 {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 50rpx;
  border: solid #f0f0f0;
  border-width: 0 0 2rpx 0;
  margin-left: 48rpx;
  margin-top: 20rpx;
}


.reason-text {
  width: 300rpx;
  height: 44rpx;
  transform: rotate(360deg);
  opacity: 0.63;
  font-family: CentraleSans;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.38;
  letter-spacing: normal;
  color: #212121;
}

.signature-text{
  width: 160rpx;
  height: 44rpx;
  margin: 36rpx 98rpx 44rpx 48rpx;
  font-family: PingFangSC;
  font-size: 32rpx;
  font-weight: 600;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #4e4e4e;
}


.signature{
  display: flex;
  margin-top: 60rpx;
}

.next{
  display: flex;
  justify-content: center;
