  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #4e4e4e;
}

.max{
  width: 120rpx;
  height: 40rpx;
  margin-left: 250rpx;
  font-family: PingFangSC;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #4e4e4e;
}


.input-body{
  margin-top: 20rpx;
  width: 100%;
  height: 256rpx;
  display: flex;
  align-items: center;
  justify-content: center; 
}

.agree-input{
  width: 630rpx;
  height: 228rpx;
  padding: 1px;
  border-radius: 3px;
  background-color: white;
}

.agree{
  margin-top: 120rpx;
}


.border{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 658rpx;
  height: 256rpx;
  border:2rpx solid #C4C4C4;
  padding: 1px;
  border-radius: 3px;
}

.signature-text{
  width: 160rpx;
  height: 44rpx;
  margin: 36rpx 98rpx 44rpx 48rpx;
  font-family: PingFangSC;
  font-size: 32rpx;
  font-weight: 600;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
