}

.slider{
  height: 20rpx;
  width: 680rpx;
}

.line-body{
  height: 25rpx;
  width: 750rpx;
  display: flex;
  align-items: center;
  position: absolute;
}
.line{
  width: 10rpx;
  height: 25rpx;
  margin-left: 54rpx;
  background-color: red;
}

.level{
  display: flex;
  margin-top: 30rpx;
  margin-left: 20rpx;
  justify-content: space-around;
}

.min{
  width: 120rpx;
  height: 40rpx;
  margin-right: 200rpx;
  font-family: PingFangSC;
  font-size: 24rpx;
