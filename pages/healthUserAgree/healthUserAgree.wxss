.text{
  width: 80px;
  height: 22px;
  margin: 23px 44px 22px 24px;
  font-family: PingFangSC;
  font-size: 16px;
  font-weight: 600;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #4e4e4e;
}

.slider-body{
  height: 40rpx;
}

.slider-box{
  display: flex;
  align-items: center;
  justify-content: center;
