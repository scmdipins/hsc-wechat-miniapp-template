.order-page{
  width: 750rpx;
  height: 1334rpx;
  padding: 0 0 56px;
  background-color: #ffffff;
}

.infomation{
  display: flex;
  align-items: center;
  width: 375px;
  height: 49px;
}

.before{
  margin-left: 32rpx;
  height: 44rpx;
  transform: rotate(360deg);
  opacity: 0.63;
  font-family: CentraleSans;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.38;
  letter-spacing: normal;
  color: #212121;
}

.after{
  margin-left: 32rpx;
  height: 44rpx;
  transform: rotate(360deg);
  font-family: CentraleSans;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.38;
  letter-spacing: normal;
  color: #212121;
}


.split-line{
  height: 4rpx;
  background-color: #f5f5f5;
}

.btn-accept{
  margin-top: 200rpx;
  margin-left: 62rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 626rpx;
  height: 80rpx;
  border-radius: 2px;
}

.btn-refused{
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 2px;
}