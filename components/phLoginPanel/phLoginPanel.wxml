<!--components/phLoginPanel/phLoginPanel.wxml-->

<view class="phloginpanel-body" bindtap="onTap">
	<image class="phloginpanel-img1" src="{{params.imgValue}}" />
	<view class="phloginpanel-view">
    <text class="phloginpanel-txt" style="color:{{params.txtColor}}">{{params.txtValue}}</text>
		<view class="phloginpanel-tip" style="color:{{params.tipColor}}">{{params.tipValue}}</view>
	</view>
	<image class="phloginpanel-img2" src="/images/right.png"/>
</view>