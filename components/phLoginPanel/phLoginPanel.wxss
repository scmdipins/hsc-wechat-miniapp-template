/* components/phLoginPanel/phLoginPanel.wxss */
.phloginpanel-body {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 86px;
}

.phloginpanel-img1 {
  min-width: 48px;
  max-width: 48px;
  min-height: 48px;
  max-height: 48px; 
  margin: 27px 27px;
}

.phloginpanel-img2 {
  min-width: 24px;
  max-width: 24px;
  min-height: 24px;
  max-height: 24px;
  margin: 27px 10px;
}

.phloginpanel-view {
  width: 100%;
}

.phloginpanel-txt {
  font-family: PingFangSC;
  font-size: 20px;
  font-weight: 600;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000000;
}

.phloginpanel-tip {
  font-family: PingFangSC;
  font-size: 10px;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #7c7c7c;
  margin-top: 5px;
}