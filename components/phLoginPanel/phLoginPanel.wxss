/* components/phLoginPanel/phLoginPanel.wxss */

.phloginpanel-body {
  height: 162rpx;
  margin-left: 42rpx;
  margin-right: 42rpx;
  display: flex;    
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.phloginpanel-body-left {
  width: 95%;
  display: flex;    
  flex-direction: row;  
  align-items: left;
  text-align: left; 
}

.phloginpanel-body-right {
  width: 5%;
  display: flex;    
  flex-direction: row;  
  align-items: left;
  text-align: left;  
}

.phloginpanel-img {
  width: 96rpx;
  height: 96rpx;
  margin: 16rpx 36rpx;
}

.phloginpanel-body-left-txt {
  display: flex;    
  flex-direction: column;
  align-items: left;
  text-align: left;
  justify-content: center;
  overflow: hidden; 
}

.phloginpanel-txt {
  height: 56rpx;
  font-family: PingFangSC;
  font-size: 40rpx;
  font-weight: 600;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000000; 
  overflow: hidden; 
  text-overflow: ellipsis; 
  white-space: nowrap;     
}

.phloginpanel-tip {
  height: 28rpx;
  font-family: PingFangSC;
  font-size: 20rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #929292;
  margin-top: 10rpx;
  overflow: hidden; 
  text-overflow: ellipsis; 
  white-space: nowrap;     
}

.phloginpanel-greatthan {
  width: 48rpx;
  height: 48rpx;   
  font-family: dls-icons-24;
  font-size: 48rpx;
  font-weight: normal;
  font-stretch: normal;
  font-style: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #5a9ada;
}
